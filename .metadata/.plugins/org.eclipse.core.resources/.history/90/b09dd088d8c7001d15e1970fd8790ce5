package com.bms.theater.consumer;

import org.springframework.kafka.annotation.KafkaListener;
import org.springframework.stereotype.Service;

import com.bms.theater.event.BookingCreationEvent;

@Service
public class KafkaConsumer {
	
	@KafkaListener(topics = "booking_theater", group="theater")
	public void consumeBookingEvent(BookingCreationEvent event) {
		System.out.println(event.getMovie().getName());
		
	}

}
